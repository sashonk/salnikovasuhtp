<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd">
     
    <bean id="ds" class="org.apache.commons.dbcp.BasicDataSource">
        <property name="username" value="root"/>
        <property name="password" value="8926sas"/>
        <property name="url" value="jdbc:mysql://localhost:3306/salnikova"/>
        <property name="driverClassName" value="com.mysql.jdbc.Driver"/>
        <property name="maxActive" value="30"/>        
         <property name="maxIdle" value="8"/>
        <property name="minIdle" value="2"/>   
        <property name="validationQuery" value="select count(1) from users"/>         
        <property name="testOnBorrow" value="true"/>          
    </bean>
    
    <bean id="npjt" class="org.springframework.jdbc.core.namedparam.NamedParameterJdbcTemplate">
        <constructor-arg ref="ds"></constructor-arg>               
    </bean>
    
    <bean id="manager" class="salnikova.orm.ManagerImpl">
           <property name="npjt" ref="npjt"/>   
    </bean>
    
    <bean id="ownerDao" class="salnikova.dao.OwnershipDao">
         <property name="npjt" ref="npjt"/>      
    </bean>
    
    <bean id="controlDao" class="salnikova.dao.ControlDao">
         <property name="manager" ref="manager" />                   
    </bean>
    
    <bean id="docDao" class="salnikova.dao.DocDao">
        <property name="dataSource" ref="ds"/>    
        <property name="npjt" ref="npjt"/>      
          <property name="manager" ref="manager" />            	                    
    </bean>
    
    <bean id="groupsDao" class="salnikova.dao.GroupsDao">
          <property name="manager" ref="manager" />           	                    
    </bean>
    
    <bean id="studentsDao" class="salnikova.dao.StudentsDao"> 
         <property name="manager" ref="manager" />                   
    </bean>
    
    <bean id="summaryDao" class="salnikova.dao.SummaryDao">
        <property name="dataSource" ref="ds"/>       
           <property name="studentsDao" ref="studentsDao"/> 	 
          <property name="ownershipDao" ref="ownerDao"/>         
          <property name="npjt" ref="npjt"/>    
            <property name="manager" ref="manager" />               	                    
    </bean>

    <bean id="depDao" class="salnikova.dao.DepartmentsDao">

          <property name="manager" ref="manager" />    
    </bean>
    

    
</beans>