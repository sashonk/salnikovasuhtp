<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd">
    
        <bean name="/login.html" 
	class="salnikova.controllers.LoginController" />
        
                <bean name="/doc.html" 
	class="salnikova.controllers.DocController" />
                
                <bean name="/ajax.html" 
	class="salnikova.controllers.AjaxController" />                
        
    <bean name="/admin/*.html" 
	class="salnikova.controllers.AdminController" />
    
    <bean name="/*.html" 
	class="salnikova.controllers.OnlyController" />
    
 
    <bean id="viewResolver"
    	class="org.springframework.web.servlet.view.InternalResourceViewResolver" >
        <property name="suffix">
            <value>.jsp</value>
        </property>
    </bean>
    

       
    
</beans>